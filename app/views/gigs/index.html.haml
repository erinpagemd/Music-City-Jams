.containr-fluid.gigs-index
  .gigs-index-title
    %h1 All the Gigs
    = link_to 'New Gig', new_gig_path

  .gigs-all.container-fluid
    .row
      .col-md-1
      .col-md-10
        - @gigs.each do |gig|
          .col-md-4
            .gigs-each
              .gigs-each-header
                %h3= gig.date.to_s(:long)
              .row
                %h2= gig.name
              .row
                .col-md-6
                  %img(src="#{gig.image}")
                .col-md-6
                  %h3= gig.location
                  .row
                    = link_to "Find out more", gig,  class: 'btn btn-info gigs-each-btn'

              .gigs-text
                %h2= gig.user.name
      .col-md-1
