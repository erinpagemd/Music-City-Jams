!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MusicCityJams
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      %nav(class='navbar navbar-inverse navbar-fixed-top')
        %div(class='container-fluid navbar-left')
          %div(class='navbar-header')
            %button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='navbar-collapse-1' aria-expanded='false')
              %span(class='sr-only') Toggle Navigation
              %span(class='icon-bar')
              %span(class='icon-bar')
              %span(class='icon-bar')
            %h3
              %a(class='navbar-brand')= link_to "Music City Jams", root_path

        %div(class='collapse navbar-collapse navbar-right' id='navbar-collapse-1')
          %ul(class='nav navbar-nav')
            %li= link_to "Home", root_path
            - if !logged_in?
              - unless controller_name == "users"
                %li= link_to "Band Sign Up", new_user_path
              - unless controller_name == 'user_sessions'
                %li= link_to "Band Sign In", new_user_session_path
              - unless controller_name == 'fans'
                %li= link_to "Fan Sign Up", new_fan_path
            - else
              %li= link_to "Band Sign Out", user_session_path, method: :delete
    %p.notice= notice
    %p.alert= alert
    = yield
